{
    "name": "DeepL Translator Single Popup",
    "description": "Unofficial DeepL Translator Single Popup Window extension.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "storage",
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "https://www.deepl.com/translator*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}